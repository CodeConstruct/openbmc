[Unit]
Description=Phosphor MBOX Daemon
BindsTo=dev-microwatt\x2dlpc\x2dctrl.device
After=dev-microwatt\x2dlpc\x2dctrl.device
Requires=xyz.openbmc_project.Control.Host.service
After=xyz.openbmc_project.Control.Host.service

[Service]
Restart=always
ExecStart=/usr/bin/env mboxd --flash {FLASH_SIZE} --window-size 1M --backend file:/var/pnor.img
SyslogIdentifier=mboxd

[Install]
WantedBy=multi-user.target
